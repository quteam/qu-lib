{
    "name": "qu-lib",
    "version": "1.0.0",
    "description": "quteam lib",
    "main": "dist/index.js",
    "module": "es/index.js",
    "jsnext:main": "es/index.js",
    "typings": "es/index.d.ts",
    "files": [
        "dist",
        "es"
    ],
    "scripts": {
        "clean": "rimraf dist && rimraf es",
        "build": "npm run clean && tsc && tsc -p ./tsconfig-es.json",
        "coverage": "npm test -- --coverage --no-cache",
        "test": "jest"
    },
    "keywords": ["typescript", "node"],
    "author": "haovei@gmail.com",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^21.1.8",
        "jest": "^21.2.1",
        "rimraf": "^2.6.2",
        "ts-jest": "^21.2.3",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1"
    },
    "dependencies": {},
    "jest": {
        "mapCoverage": true,
        "collectCoverageFrom": ["src/**/*.ts"],
        "coveragePathIgnorePatterns": ["\/node_modules\/"],
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
        },
        "testMatch": [
            "**/*.test.(ts|js)"
        ],
        "testEnvironment": "node",
        "browser": true
    }
}
