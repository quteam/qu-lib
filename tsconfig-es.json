{
    "compilerOptions": {
        "target": "ESNEXT",
        "strictNullChecks": true,
        "moduleResolution": "node",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "outDir": "./es",
        "lib": [
            "dom",
            "esnext"
        ],
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
